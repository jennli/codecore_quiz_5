<div class="container">
  <h2>New Auction</h2>
  <%= simple_form_for(@auction, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :title, label: "Title", input_html: {class: "small-field"} %>
  <%= f.input :details %>
  <%= f.input :price, as: :string %>

  <div class='row datetimerange'>

    <%= f.input :end_date, as: :datetime_picker, wrapper: :ranged_datetime, class:"datetimepicker" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
